{
	"name": "prosemirror-svelte",
	"version": "0.2.4",
	"description": "Svelte bindings for the ProseMirror editor",
	"author": "Christian Heine",
	"license": "MIT",
	"main": "ProsemirrorEditor.svelte",
	"svelte": "ProsemirrorEditor.svelte",
